<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPlayersActivity">

    <EditText
        android:id="@+id/editPlayers_player1"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rect"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editPlayers_player2"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/rect"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="180dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editPlayers_player3"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/rect"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:visibility="gone"
        android:layout_marginTop="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editPlayers_player4"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@drawable/rect"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="420dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addPlayerBtn"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="540dp"
        android:background="@color/green"
        android:fontFamily="@font/paytone_one"
        android:gravity="center"
        android:text="Add Player"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editPlayer_delete_player1_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_minus"
        app:layout_constraintBottom_toTopOf="@+id/editPlayers_player1"
        app:layout_constraintEnd_toEndOf="@+id/editPlayers_player1"
        app:layout_constraintStart_toEndOf="@+id/editPlayers_player1"
        app:layout_constraintTop_toTopOf="@+id/editPlayers_player1" />

    <Button
        android:id="@+id/editPlayer_delete_player2_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_minus"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/editPlayers_player2"
        app:layout_constraintEnd_toEndOf="@+id/editPlayers_player2"
        app:layout_constraintStart_toEndOf="@+id/editPlayers_player2"
        app:layout_constraintTop_toTopOf="@+id/editPlayers_player2" />

    <Button
        android:id="@+id/editPlayer_delete_player3_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_minus"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/editPlayers_player3"
        app:layout_constraintEnd_toEndOf="@+id/editPlayers_player3"
        app:layout_constraintStart_toEndOf="@+id/editPlayers_player3"
        app:layout_constraintTop_toTopOf="@+id/editPlayers_player3" />

    <Button
        android:id="@+id/editPlayer_delete_player4_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_minus"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/editPlayers_player4"
        app:layout_constraintEnd_toEndOf="@+id/editPlayers_player4"
        app:layout_constraintStart_toEndOf="@+id/editPlayers_player4"
        app:layout_constraintTop_toTopOf="@+id/editPlayers_player4" />


</androidx.constraintlayout.widget.ConstraintLayout>